{
  "name": "epicweb",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "imports": {
    "#*": "./*"
  },
  "scripts": {
    "build": "run-s build:*",
    "build:remix": "remix build --sourcemap",
    "build:server": "tsx ./other/build-server.ts",
    "build:icons": "rmx svg-sprite other/svg-icons app/components/ui/icon.tsx --template=./other/svg-icon-template.txt",
    "dev": "remix dev --manual -c \"node ./server/dev-server.js\"",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "test:e2e": "npm run test:e2e:dev --silent",
    "test:e2e:dev": "playwright test --ui",
    "pretest:e2e:run": "npm run build",
    "test:e2e:run": "cross-env CI=true playwright test",
    "test:e2e:install": "npx playwright install --with-deps chromium",
    "serve": "remix-serve build/index.js",
    "start": "run-s build serve",
    "query": "tsx prisma/tmp.ignore.ts",
    "query:watch": "tsx watch prisma/tmp.ignore.ts",
    "lint": "eslint .",
    "typecheck": "tsc",
    "otp": "node tests/otp.js"
  },
  "prisma": {
    "seed": "npx tsx ./prisma/seed.ts"
  },
  "eslintIgnore": [
    "/node_modules",
    "/build",
    "/public/build",
    "/playwright-report",
    "/server-build"
  ],
  "dependencies": {
    "@epic-web/totp": "^1.1.1",
    "@kentcdodds/workshop-app": "^2.58.5",
    "@mswjs/data": "^0.14.0",
    "@prisma/client": "^5.6.0",
    "@radix-ui/react-alert-dialog": "^1.0.5",
    "@radix-ui/react-checkbox": "^1.0.4",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-slot": "^1.0.2",
    "@react-email/components": "^0.0.12",
    "@remix-run/css-bundle": "2.2.0",
    "@remix-run/express": "2.2.0",
    "@remix-run/node": "2.2.0",
    "@remix-run/react": "2.2.0",
    "@remix-run/serve": "2.2.0",
    "address": "^2.0.1",
    "bcryptjs": "^2.4.3",
    "chalk": "^5.3.0",
    "class-variance-authority": "^0.7.0",
    "close-with-grace": "^1.2.0",
    "clsx": "^2.0.0",
    "compression": "^1.7.4",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.4",
    "get-port": "^7.0.0",
    "glob": "^10.3.10",
    "isbot": "^3.7.0",
    "morgan": "^1.10.0",
    "qrcode": "^1.5.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "remix-auth": "^3.6.0",
    "remix-auth-github": "^1.6.0",
    "remix-utils": "^7.1.0",
    "spin-delay": "^1.2.0",
    "tailwind-merge": "^1.14.0",
    "tailwindcss": "^3.3.3",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@conform-to/react": "^0.9.0",
    "@conform-to/zod": "^0.9.0",
    "@faker-js/faker": "^8.2.0",
    "@mermaid-js/mermaid-cli": "^10.6.0",
    "@playwright/test": "^1.39.0",
    "@remix-run/dev": "2.1.0",
    "@remix-run/eslint-config": "2.1.0",
    "@total-typescript/ts-reset": "^0.5.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.4",
    "@types/express": "^4.17.20",
    "@types/fs-extra": "^11.0.2",
    "@types/morgan": "^1.9.6",
    "@types/qrcode": "^1.5.5",
    "@types/react": "^18.2.28",
    "@types/react-dom": "^18.2.13",
    "autoprefixer": "^10.4.16",
    "chokidar": "^3.5.3",
    "dotenv": "^16.3.1",
    "enforce-unique": "^1.2.0",
    "esbuild": "0.19.5",
    "eslint": "^8.51.0",
    "eslint-config-prettier": "^9.0.0",
    "execa": "^8.0.1",
    "fs-extra": "^11.1.1",
    "lodash": "^4.17.21",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.3",
    "prettier-plugin-tailwindcss": "^0.5.6",
    "prisma": "^5.6.0",
    "prisma-erd-generator": "^1.11.1",
    "remix-flat-routes": "^0.6.1",
    "rmx-cli": "^0.4.15",
    "tsx": "^3.14.0",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": "18"
  },
  "kcd-workshop": {
    "scripts": {
      "test": "playwright test --trace=retain-on-failure"
    }
  }
}
